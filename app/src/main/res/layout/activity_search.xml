<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
    
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:title="@string/search"
        android:titleTextAppearance="@style/SettingsActivityToolbarTitleStyle"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/ic_edit_text_search_background"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:fontFamily="@font/ys_display_regular"
                android:hint="@string/search"
                android:textColorHint="?attr/colorSecondary"
                android:textFontWeight="400"
                android:textSize="@dimen/small_text_size"
                android:lines="1"
                android:textColor="@color/black"
                android:maxLength="15"
                android:inputType="text"
                android:drawableStart="@drawable/ic_search_2"
                android:drawableTint="?attr/colorSecondary"
                android:paddingStart="12dp"
                android:drawablePadding="8dp"/>

            <ImageView
                android:id="@+id/bClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_clear_search"
                android:layout_marginEnd="10dp"
                app:tint="?attr/colorSecondary"
                android:background="@null"
                android:visibility="gone"/>

        </FrameLayout>
        
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_padding"
        android:layout_marginHorizontal="13dp"/>
</LinearLayout>