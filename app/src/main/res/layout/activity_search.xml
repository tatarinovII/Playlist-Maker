<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchActivity.SearchActivity">
    
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:title="@string/search"
        android:titleTextAppearance="@style/SettingsActivityToolbarTitleStyle"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/ic_edit_text_search_background"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:fontFamily="@font/ys_display_regular"
                android:hint="@string/search"
                android:textColorHint="?attr/colorSecondary"
                android:textFontWeight="400"
                android:textSize="@dimen/small_text_size"
                android:lines="1"
                android:textColor="@color/black"
                android:maxLength="15"
                android:inputType="text"
                android:drawableStart="@drawable/ic_search_2"
                android:drawableTint="?attr/colorSecondary"
                android:paddingStart="12dp"
                android:drawablePadding="8dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <ImageView
                android:id="@+id/bClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_clear_search"
                android:layout_marginEnd="10dp"
                app:tint="?attr/colorSecondary"
                android:background="@null"
                android:visibility="gone"/>

        </FrameLayout>
        
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_padding"
        android:layout_marginHorizontal="13dp"
        tools:visibility="gone"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llErrorInternetConnection"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="102dp"
            android:layout_gravity="center"
            app:drawableTopCompat="@drawable/ic_connection_error"
            android:text="@string/search_connection_error"
            android:drawablePadding="@dimen/default_padding"
            android:textAlignment="center"
            android:textAppearance="@style/SearchActivityErrorTextStyle"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bRefreshPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            app:cornerRadius="54dp"
            android:text="@string/refresh"
            android:backgroundTint="?attr/colorPrimary"
            android:textAllCaps="false"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            android:textSize="14sp"/>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvEmptySearchOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SearchActivityErrorTextStyle"
        android:layout_marginTop="102dp"
        android:text="@string/no_search_output"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:drawablePadding="16dp"
        app:drawableTopCompat="@drawable/ic_empty_search_output" />
    
    <LinearLayout
        android:id="@+id/llSearchHistory"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/you_searched"
            style="@style/SearchActivityErrorTextStyle"
            android:textFontWeight="500"
            android:layout_marginTop="24dp"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="13dp"
            android:layout_weight="1"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bClearSearchHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/clear_search_history"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="14sp"
            android:textFontWeight="500"
            android:layout_gravity="center"
            app:cornerRadius="54dp"
            android:textAllCaps="false"/>
        
    </LinearLayout>
</LinearLayout>