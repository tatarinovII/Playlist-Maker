<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="elevation">0dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>
    <style name="SettingsActivityTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsActivityIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
    </style>
    <style name="SettingsActivityToolbarTitleStyle">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="MainActivityTitleStyle">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
</resources>